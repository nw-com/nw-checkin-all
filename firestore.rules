rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 是否已登入
    function isSignedIn() {
      return request.auth != null;
    }

    // 管理員判斷：
    // 1) 以自訂 Claims: request.auth.token.isAdmin / .admin
    // 2) 或存在 admins/{uid} 文件
    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.isAdmin == true ||
        request.auth.token.admin == true ||
        exists(/databases/$(database)/documents/admins/$(request.auth.uid))
      );
    }

    // 是否本人（文件 id 為該使用者 uid）
    function isSelf(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    // 手機→Email登入映射：loginMapping/{phone}
    // 說明：為了在未登入時可依手機取得 Email，僅允許 get 單筆讀取；禁止 list/查詢。
    match /loginMapping/{phone} {
      allow get: if true;           // 允許任何人以文件ID讀取（不允許查詢）
      allow list: if false;         // 禁止集合查詢與列出
      allow create, update, delete: if isAdmin();
    }

    // 管理員名單，可搭配 isAdmin() 使用；僅限管理員存取
    match /admins/{uid} {
      allow read, write: if isAdmin();
    }

    // 使用者資料：users/{uid}（建議文件 id = Firebase Auth uid）
    match /users/{uid} {
      // 本人或管理員可讀取單筆；查詢/列出僅限管理員（避免未授權的搜尋行為）
      allow get: if isSelf(uid) || isAdmin();
      allow list: if isAdmin();

      // 建立／更新：本人可管理自己的資料，管理員可代管；刪除僅限管理員
      allow create: if isSelf(uid) || isAdmin();
      allow update: if isSelf(uid) || isAdmin();
      allow delete: if isAdmin();
    }

    // 其他未明確定義的集合一律拒絕
    match /{document=**} {
      allow read, write: if false;
    }
  }
}